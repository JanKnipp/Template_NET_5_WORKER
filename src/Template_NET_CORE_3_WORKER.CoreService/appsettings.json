{
  "MassTransitRabbitConfig": {
    "ClusterName": "cluster",
    "ClusterPort":  5671, 
    "VirtualHost": "vhost",
    "ClusterNodes": [ "node1", "node2" ],
    "Username": "user",
    "Password": "pw"
  },
  "SampleQuartzServiceOptions": {
    "CronConfig": "0 /1 * * * ? *"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Quartz" :  "Warning", 
        "Template_NET_CORE_3_Worker.CoreService": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs\\log.txt",
                "fileSizeLimitBytes": 1073741824,
                "retainedFileCountLimit": 30,
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Debug",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {RequestId} {Message:lj}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs\\log_json.txt",
                "fileSizeLimitBytes": 1073741824,
                "retainedFileCountLimit": 30,
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Error",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Verbose",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {RequestId} {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithExceptionDetails",
      "WithProcessName",
      "WithProcessId",
      "WithThreadId",
      "WithMemoryUsage",
      "WithEnvironmentUserName",
      "WithAssemblyName",
      "WithAssemblyVersion"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 5 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 32768 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 32768 }
      }
    ],
    "Properties": {
      "Application": "Template_NET_CORE_3_Worker",
      "Build": "BuildVersion",
      "Environment": "EnvironmentIdentifier"
    }
  }
}